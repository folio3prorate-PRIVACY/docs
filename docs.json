{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "palm",
  "name": "Octav Developer Docs",
  "version": "2.1.0",
  "colors": {
    "primary": "#3F58C7",
    "light": "#3F58C7",
    "dark": "#3F58C7"
  },
  "navbar": {
    "links": [
      {
        "label": "Get Help",
        "href": "https://discord.com/invite/qvcknAa73A",
        "icon": "discord",
        "iconType": "solid"
      },
      {
        "label": "Dev Portal",
        "href": "https://data.octav.fi/",
        "icon": "/logo/Octav_logo_icon_red@2x.png"
      }
    ]
  },
  "font": {
    "headings": {
      "family": "Space Grotesk"
    },
    "body": {
      "family": "Geist"
    },
    "code": {
      "family": "Geist Mono"
    }
  },
  "logo": {
    "light": "/logo/logo-dark.svg",
    "dark": "/logo/logo-light.svg"
  },
  "favicon": "/logo/Octav_logo_icon_red@2x.png",
  "customCSS": [
    "/custom.css"
  ],
  "metadata": {
    "og:image": "https://octav.fi/og-image.png"
  },
  "footerSocials": {},
  "redirects": [
    {
      "source": "/",
      "destination": "/docs/quickstart"
    }
  ],
  "openapi": "openapi.json",
  "api": {
    "baseUrl": "https://api.octav.fi/v1",
    "auth": {
      "method": "bearer"
    },
    "mdx": {
      "server": "https://api.octav.fi/v1",
      "auth": {
        "method": "bearer"
      }
    },
    "playground": {
      "mode": "simple"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Docs",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "docs/quickstart",
              "docs/supported-blockchains",
              "docs/authentication",
              "docs/changelog"
            ]
          },
          {
            "group": "Using Octav",
            "pages": [
              "docs/account",
              "docs/home",
              "docs/address-book",
              "docs/widget-explorer",
              "docs/transactions",
              "docs/reports"
            ]
          },
          {
            "group": "Widgets",
            "pages": [
              "docs/supported-widgets",
              "docs/build-custom-widgets"
            ]
          },
          {
            "group": "Brand Kit",
            "pages": [
              "docs/brand-guidelines",
              "docs/logo-files"
            ]
          },
          {
            "group": "Support",
            "pages": [
              "docs/contact-us",
              "docs/submit-feature"
            ]
          }
        ]
      },
      {
        "tab": "API",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "api/introduction",
              "api/authentication",
              "api/quickstart",
              "api/pricing"
            ]
          },
          {
            "group": "Endpoints",
            "openapi": "openapi.json"
          },
          {
            "group": "AI Development",
            "pages": [
              "api/ai-development/overview",
              "api/ai-development/quick-start",
              "api/ai-development/llms-integration",
              "api/ai-development/building-agents"
            ]
          },
          {
            "group": "Reference",
            "pages": [
              "api/reference/supported-chains",
              "api/reference/protocol-types",
              "api/reference/transaction-types"
            ]
          }
        ]
      }
    ]
  }
}
